@model List<Product>

@{
    ViewBag.Title = "All products";
}

<h1>Products @Model.Count</h1>

<a class="btn btn-primary m-5" asp-controller="Products" asp-action="Create">Add new</a>
@if (Model.Count == 0)
{
    <p>There is no products yet.</p>
}
else
{
    foreach (var product in Model)
    {
        <div class="container">
            <h2>@product.Name</h2>
            <p>@product.Price</p>
        </div>
    }
}